#!/usr/bin/env bash
# TaskPy - META PROCESS v4 Task Management CLI
#
# This wrapper allows running taskpy without installation
# during development.

# Get the directory where this script is located
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
PROJECT_ROOT="$( cd "$SCRIPT_DIR/.." && pwd )"

# Add src to PYTHONPATH and run taskpy
PYTHONPATH="${PROJECT_ROOT}/src:${PYTHONPATH}" python3 -m taskpy "$@"
